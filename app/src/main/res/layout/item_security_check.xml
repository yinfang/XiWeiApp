<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_a3"
    android:orientation="vertical"
    app:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:minHeight="@dimen/line_height"
        android:orientation="horizontal"
        android:weightSum="6.8">

        <LinearLayout
            android:id="@+id/select_ll"
            style="@style/LinearLayoutClickStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="0.3"
            android:background="@color/white"
            android:gravity="center">

            <ImageView
                android:id="@+id/select"
                style="@style/TextDarkGrayStyle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/checkbox_off" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_range"
            style="@style/TextDarkGrayStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/line_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/TextDarkGrayStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/TextDarkGrayStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_item"
                    style="@style/TextDarkGrayStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/TextDarkGrayStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/remark_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:minHeight="@dimen/line_height"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="备注" />

                <EditText
                    android:id="@+id/et_remark"
                    style="@style/TextDarkGrayStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            style="@style/TextDarkGrayStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_checker"
            style="@style/TextDarkGrayStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
