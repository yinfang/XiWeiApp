<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_img"
    android:background="@color/bg_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/header_back"
            style="@style/LinearLayoutClickStyle"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:contentDescription="@string/dummy"
                android:scaleType="fitXY"
                android:src="@drawable/icon_arrow_left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onduty_ll"
            style="@style/LinearLayoutClickStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_small"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/small_img"
                android:layout_height="@dimen/small_img"
                android:src="@drawable/ic_onduty" />

            <TextView
                android:layout_width="@dimen/small_img"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="值班表"
                android:textColor="@color/title_blue"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/title_blue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/refresh_ll"
            style="@style/LinearLayoutClickStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_refresh_page" />
        </LinearLayout>

        <TextView
            android:id="@+id/go_history"
            style="@style/TextClickStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/margin_small"
            android:text="历史记录>>"
            android:textColor="@color/title_blue"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/top_submit"
            style="@style/GreenButtonStyle"
            android:layout_width="65dp"
            android:visibility="gone"
            android:layout_height="@dimen/delete_img"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_large"
            android:gravity="center"
            android:text="提交" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_home"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_normal_transparent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/dummy"
            android:src="@drawable/icon_home" />
    </LinearLayout>

</LinearLayout>